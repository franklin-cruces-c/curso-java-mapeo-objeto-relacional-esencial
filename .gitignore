    # Archivos de Maven
    # =================
    # Directorio de salida de la compilación de Maven
    target/ # CAMBIO: Ahora ignora cualquier directorio 'target' en cualquier nivel
    # Archivos JAR, WAR, EAR, etc. generados
    *.jar
    *.war
    *.ear
    *.zip
    *.tar.gz
    *.rar
    # Archivos de clase compilados
    *.class
    # Archivos de backup de POM (generados por plugins de Maven)
    pom.xml.tag
    pom.xml.next
    pom.xml.releaseBackup
    pom.xml.versionsBackup
    pom.xml.stacktrace

    # Archivos de Eclipse
    # ===================
    # Archivo de configuración del proyecto de Eclipse
    .project
    # Archivo de classpath de Eclipse
    .classpath
    # Directorio de configuraciones específicas del proyecto de Eclipse
    .settings/
    # Archivos de la Papelera de Reciclaje de Eclipse (si se usan)
    .recommenders/
    # Directorio de metadatos del workspace de Eclipse (normalmente fuera del proyecto, pero útil si se copia)
    .metadata/

    # Archivos del sistema operativo
    # =============================
    # macOS
    .DS_Store
    .AppleDouble
    .LSOverride

    # Windows
    Thumbs.db
    ehthumbs.db
    Desktop.ini
    $RECYCLE.BIN/

    # Linux
    *.swp
    *.bak
    *~

    # Archivos de logs y temporales
    # ============================
    *.log
    *.tmp
    *.temp
    /tmp/
    /temp/

    # Archivos de IDEs comunes (además de Eclipse)
    # ==========================================
    # IntelliJ IDEA
    .idea/
    *.iml
    *.ipr
    *.iws

    # VS Code
    .vscode/

    # NetBeans
    nbproject/
    *.form
    *.ser

    # Archivos de configuración sensibles (ej. propiedades con contraseñas)
    # ===================================================================
    # Si tienes archivos de propiedades con credenciales, exclúyelos.
    # Por ejemplo:
    # src/main/resources/application.properties.local
    # src/main/resources/config.properties
    # *.env
    # .env

    # Otros archivos generados
    # =======================
    # Archivos de cobertura de código
    /coverage/
    *.exec
    *.html.exec
    *.ec

    # Archivos de Javadoc
    /docs/apidocs/

    # Archivos de pruebas (si no están en target/)
    # /test-output/

    # Archivos de caché de dependencias (si no están en target/)
    # /lib/
